<div class="centered basic-form">
 <% if @appointment.id %>
    <h3>Update Appointment</h3>
  <% else %>
    <h3>Add a New Appointment</h3>
  <% end %>  
  <%= simple_form_for @appointment do |f| %>
    <%= f.input :name %>
    <%= f.input :location %>
    <%= f.input :start_time, as: :string, input_html: {class: "date-time-picker"}, 
                                                       label: "Date and Time", 
                                                       placeholder: DateTime.now.strftime("%Y-%m-%d %H:%M") %>
    <%= f.input :description %>
    <%= f.button :submit %>
  <% end %>
</div>
 