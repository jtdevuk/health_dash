<%= month_calendar(events: @appointments) do |date, appointments| %>
  <%= date.day %>

  <% appointments.each do |appointment| %>
    <div id="appointment-info">
      <%= appointment.name %>
      <hr>    
    </div>
  <% end %>
<% end %>

<%= link_to "Add a new appointment", new_appointment_path %>
