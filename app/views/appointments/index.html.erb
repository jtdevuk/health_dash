<h3>Hi, <%= current_user.first_name %></h3>

<% if @appointments.any? %>
  <p><%= "You have #{@appointments.length} appointments in the month shown" %></p>
<% else %>
  <p><%= "You don't have any appointments in the month shown" %></p>
<% end %>

<%= link_to "Add a new appointment", new_appointment_path, class: "btn" %>
<%= month_calendar(events: @appointments) do |date, appointments| %>
  <%= date.day %>

  <% appointments.each do |appointment| %>
    <div id="appointment-info">
        <%= link_to appointment.name, appointment_path(appointment) %>
      <hr>    
    </div>
  <% end %>
<% end %>

