<h3>Hi, <%= current_user.first_name %></h3>

<% if @appointments.any? %>
  <p><%= "You have #{@appointments.length} appointments in the month shown" %></p>
<% else %>
  <p><%= "You don't have any appointments in the month shown" %></p>
<% end %>

<div id="calendar-modal" class="hidden">
  
</div>
<%= month_calendar(events: @appointments) do |date, appointments| %>
  <%= date.day %>

  <% appointments.each do |appointment| %>    
    <div class="appointment-info">
      <% if appointment.record_id %>
        <%= appointment.name %>
      <% else %>
        <%= appointment.name %>      
      <% end %>
      <hr>    
    </div>
  <% end %>
<% end %>

<%= link_to "Add a new appointment", new_appointment_path %>
<%#= appointment.start_time.strftime("%H:%M") %>