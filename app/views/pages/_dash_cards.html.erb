<div class="cards-container">
  <div class="card">
    <div class="card-title">Appointments</div>
    <div class="card-body">
      <%= link_to appointments_path do %>
        <i class="far fa-calendar-alt"></i>
      <% end %>
    </div>
  </div>
  <div class="card">
      <div class="card-title">Medications</div>
    
      <div class="card-body">
        <%= link_to medications_path do %>
          <i class="fas fa-capsules"></i>
        <% end %>
      </div>
  </div>
  <div class="card">
    <div class="card-title">Records</div>
    <div class="card-body">
      <%= link_to records_path do %>
        <i class="far fa-file-alt"></i>
      <% end %>      
    </div>
  </div>
</div>