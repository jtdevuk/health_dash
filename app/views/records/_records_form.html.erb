<div class="centered basic-form">
<% if @record.id %>
    <h3>Update Record</h3>
  <% else %>
    <h3>Add a New Record</h3>
  <% end %> 
  <%= simple_form_for @record do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :appointment_date, as: :string, input_html: {class: "date-time-picker"} %>
    <%= f.input :category %>
    <%= simple_fields_for :other do |o| %>
      <%= o.input :link_to_calendar, as: :boolean, label: 'Add appointment to calendar?' %>
    <% end %>
    <%= f.file_field :letter %>
    <%= f.button :submit %>
  <% end %>
</div>