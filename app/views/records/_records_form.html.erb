<div class="centered record-form">
  <%= simple_form_for @record do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :appointment_date %>
    <%= f.input :category %>
    <%= simple_fields_for :other do |o| %>
      <%= o.input :link_to_calendar, as: :boolean, label: 'Add appointment to calendar?' %>
    <% end %>
    <%= f.file_field :letter %>
    <%= f.submit %>
  <% end %>
</div>